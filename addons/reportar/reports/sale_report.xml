<odoo>
    <template id="report_hoja_taller_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Orden de Preparaci√≥n</h2>
                            <h3><span t-field="doc.name"/></h3>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Cliente:</strong> <span t-field="doc.partner_id.name"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Fecha:</strong> <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                        </div>

                        <table class="table table-sm mt-4">
                            <thead>
                                <tr>
                                    <th class="text-center">Check</th>
                                    <th>Producto</th>
                                    <th class="text-end">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <tr>
                                        <td class="text-center">
                                            <div style="border: 1px solid black; width: 20px; height: 20px; margin: auto;"/>
                                        </td>
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td class="text-end">
                                            <span t-field="line.product_uom_qty"/> <span t-field="line.product_uom"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="mt-5">
                            <p>Firma del Operario: ___________________________</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>